<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameplay.MenuActivity">

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/pemain_vs_pemain"
        android:src="@drawable/Ellipse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="73dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:fontFamily="sans-serif"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif"
        android:text="@string/thor"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_head"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/tv_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_head" />

    <Button
        android:id="@+id/tv_pemain_vs_pemain"
        style="@style/landing_menu_text"
        android:layout_marginTop="144dp"
        android:backgroundTint="@color/purple"
        android:text="@string/player_vs_player"
        app:layout_constraintEnd_toEndOf="@+id/iv_player"
        app:layout_constraintStart_toStartOf="@+id/iv_player"
        app:layout_constraintTop_toBottomOf="@+id/iv_player" />

    <Button
        android:id="@+id/tv_pemain_vs_CPU"
        style="@style/landing_menu_text"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/purple"
        android:text="@string/player_vs_cpu"
        app:layout_constraintStart_toStartOf="@+id/tv_pemain_vs_pemain"
        app:layout_constraintTop_toBottomOf="@+id/tv_pemain_vs_pemain" />

    <Button
        android:id="@+id/backtomenu"
        style="@style/landing_menu_text"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/purple"
        android:text="@string/back_to_menu"
        app:layout_constraintStart_toStartOf="@+id/tv_pemain_vs_pemain"
        app:layout_constraintTop_toBottomOf="@+id/tv_pemain_vs_pemain" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>