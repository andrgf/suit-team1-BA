<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.sound.SoundActivity">

    <View
        android:id="@+id/view_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/backgorund_view"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="3dp"
        android:layout_height="47dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <ImageView
        android:id="@+id/btnbackhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTopscore"
        style="@style/Judul"
        android:text="@string/sound"
        app:layout_constraintBottom_toBottomOf="@+id/view_setting"
        app:layout_constraintEnd_toEndOf="@+id/view_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound_off"
        style="@style/Judul"
        android:textSize="20dp"
        android:textColor="@color/biru"
        app:layout_constraintEnd_toStartOf="@+id/switch1"
        app:layout_constraintStart_toStartOf="@+id/btnbackhome"
        app:layout_constraintTop_toBottomOf="@+id/view_setting" />

    <Switch
        android:layout_marginTop="30dp"
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnbackhome"
        app:layout_constraintTop_toBottomOf="@+id/view_setting"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        style="@style/Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound_on"
        android:textSize="20dp"
        android:textColor="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toTopOf="@+id/switch1" />


</androidx.constraintlayout.widget.ConstraintLayout>