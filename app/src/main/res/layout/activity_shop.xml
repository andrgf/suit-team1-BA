<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.shop.ShopActivity">

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShop"
        tools:src="@drawable/avatar1" />


    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/comicsans"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_img"
        tools:text="Joe" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShop"
        style="@style/Judul"
        android:text="@string/shop"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAngkapoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comicsans"
        android:text="@string/_1"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <RelativeLayout
        android:id="@+id/guntingskin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAngkapoint">

        <ImageView
            android:id="@+id/gunting"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/gunting2" />

        <TextView
            android:id="@+id/tvskingunting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/gunting"
            android:fontFamily="@font/comicsans"
            android:gravity="center"
            android:text="@string/skin_gunting_level_up_n_jumlah_point_100"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnguntingskin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvskingunting"
            android:text="@string/tukar_point"
            android:backgroundTint="@color/blue_text"
            android:layout_toEndOf="@+id/gunting"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/batuskin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/guntingskin">

        <ImageView
            android:id="@+id/batu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/batu2"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvskinbatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/batu"
            android:fontFamily="@font/comicsans"
            android:gravity="center"
            android:text="@string/skin_batu_level_up_n_jumlah_point_100"
            android:textColor="@color/black"
            android:textStyle="bold" />



        <Button
            android:id="@+id/btnbatuskin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvskinbatu"
            android:text="@string/tukar_point"
            android:backgroundTint="@color/blue_text"
            android:layout_toEndOf="@+id/batu"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kertasskin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/batuskin">

        <ImageView
            android:id="@+id/kertas"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/kertas2"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvskinkertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/kertas"
            android:fontFamily="@font/comicsans"
            android:gravity="center"
            android:text="@string/skin_kertas_level_up_n_jumlah_point_100"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnkertasskin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvskinkertas"
            android:text="@string/tukar_point"
            android:backgroundTint="@color/blue_text"
            android:layout_toEndOf="@+id/kertas"

            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>