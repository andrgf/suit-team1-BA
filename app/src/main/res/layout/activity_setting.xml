<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.setting.SettingActivity">

    <View
        android:id="@+id/view_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/backgorund_view"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="3dp"
        android:layout_height="47dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <ImageView
        android:id="@+id/btnbackhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTopscore"
        style="@style/Judul"
        android:text="@string/setting"
        app:layout_constraintBottom_toBottomOf="@+id/view_setting"
        app:layout_constraintEnd_toEndOf="@+id/view_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_profil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btnLight"
        android:fontFamily="@font/comicsans"
        android:text="@string/profile"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableEnd="@drawable/ic_nextbutton"
        app:layout_constraintTop_toBottomOf="@+id/view_setting" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_leaguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/btnLight"
        android:drawableEnd="@drawable/ic_nextbutton"
        android:fontFamily="@font/comicsans"
        android:text="@string/languages"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_profil" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_appearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/btnLight"
        android:drawableEnd="@drawable/ic_nextbutton"
        android:fontFamily="@font/comicsans"
        android:text="@string/appearance"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_leaguage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gamesound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/btnLight"
        android:drawableEnd="@drawable/ic_nextbutton"
        android:fontFamily="@font/comicsans"
        android:text="@string/game_sound"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_appearance" />



</androidx.constraintlayout.widget.ConstraintLayout>